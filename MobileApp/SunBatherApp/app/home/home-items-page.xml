<Page xmlns:comps="components" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true" xmlns:chart="nativescript-ui-chart">
    <GridLayout columns="*" rows="*,auto" width="100%"  >
        <StackLayout row="0" >
            <comps:header />
        </StackLayout>
        <StackLayout row="1" height="82%">
            <StackLayout  tap="{{ getRequest }}" >
                <GridLayout rows="*,auto" columns="*" class="system-data-header">
                    <Label col="0" text="System Status" textWrap="true"/>
                </GridLayout>
                <GridLayout rows="*,*" columns="*,*,*" class="system-datafield">
                    <Label col="0" row="0" text="Pump Status" textWrap="true" class="system-data-sub"/>
                    <Label col="0" row="1" text="{{ pumpStatus }}" textWrap="true" class="system-data-field"/> 
                    
                    <Label col="1" row="0" text="Set Temperature" textWrap="true" class="system-data-sub"/>
                    <Label col="1" row="1" text="{{ setTemp }}" textWrap="true" class="system-data-field"/>
                
                    <Label col="2" row="0" text="Pool Temperature" textWrap="true" class="system-data-sub"/>
                    <Label col="2" row="1" text="{{ poolTemp }}" textWrap="true" class="system-data-field"/>
                </GridLayout>
                <GridLayout rows="*,auto" columns="*" class="system-data-header">
                    <Label col="0" text="Current Conditions" textWrap="true"/>
                </GridLayout>
                <GridLayout rows="*,*" columns="*,*" class="system-datafield">
                    <Label col="0" row="0" text="Current Roof Temperature" textWrap="true" class="system-data-sub"/>
                    <Label col="0" row="1" text="{{ roofTemp }}" textWrap="true" class="system-data-field"/>

                    <Label col="1" row="0" text="Current UV" textWrap="true" class="system-data-sub"/>
                    <Label col="1" row="1" text="{{ currentUV }}" textWrap="true" class="system-data-field"/>
                </GridLayout>
            </StackLayout>
            <StackLayout class="graph-data">
                <Label text="Graph Title" horizontalAlignment="center" textWrap="true" />
                <GridLayout rows="*"  height="1000px">
                <chart:RadCartesianChart id="cartesianChart">
                    <chart:RadCartesianChart.horizontalAxis>
                        <chart:CategoricalAxis/>
                    </chart:RadCartesianChart.horizontalAxis>
                    <chart:RadCartesianChart.verticalAxis>
                        <chart:LinearAxis/>
                    </chart:RadCartesianChart.verticalAxis>
                    <chart:RadCartesianChart.series>
                        <chart:LineSeries items="{{ categoricalSource }}" categoryProperty="readDateTime" valueProperty="temperatureValueRoof">
                        </chart:LineSeries>
                    </chart:RadCartesianChart.series>
                </chart:RadCartesianChart>
                </GridLayout>
            </StackLayout>
            <StackLayout class="view-other">
                <Button text="view otherGraphs" ></Button>
            </StackLayout>   
        </StackLayout>   
    </GridLayout>
</Page>

